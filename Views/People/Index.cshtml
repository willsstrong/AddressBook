@model IEnumerable<AddressBook.Models.Person>


@{
    ViewBag.Title = "Address Book";
    var TabID = 'A';
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<!--
        This will render a bootstrap tab ribbon that with tabs for each letter from a-z
 -->

<ul class="nav nav-tabs nav-fill" role="tablist" id="address-tabs">

    @for (char c = 'A'; c <= 'Z'; c++)  //Render tabs from every letter
    {
        string tabID = Char.ToString(c);
        if (c == 'A') //first nav-item needs to implement the .active style class
        {

            <li class="nav-item">
                <span class="nav-link active"  role="tab">@Html.ActionLink(tabID, "Index", new { TabID = tabID } )</span>
            </li>
        }
        else
        {
            TabID = c;
            <li class="nav-item">
                <span class="nav-link"  role="tab">@Html.ActionLink(tabID, "Index", new { TabID = tabID })</span>
            </li>
        }
    }
</ul>

<!-- Tab Content -->
<div class="tab-content page-content">
    <div class="tab-pane fade show active" role="tabpanel">
        TODO: Load List of Poepole
        <table class="table">
            <tr>
                <th>
                    Last Name
                </th>
                <th>
                    First Name
                </th>
                <th>
                    Address
                </th>
                <th>
                    City
                </th>
                <th>
                    Province
                </th>
                <th>
                    Postal Code
                </th>
                <th>
                    Phone: Main
                </th>
                <th>
                    Phone: Cell
                </th>
                <th>
                    Email
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.City)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Province)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PostCode)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PhoneNumMain)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PhoneNumCell)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>
